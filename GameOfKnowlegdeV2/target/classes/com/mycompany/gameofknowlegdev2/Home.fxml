            <Glow level="0.75">
               <input>
                  <ColorAdjust hue="0.45" />
               </input>
            </Glow>
         </effect>
      </ProgressBar>
      <ImageView fx:id="GoBtn" fitHeight="93.0" fitWidth="65.0" layoutX="348.0" layoutY="66.0" onMouseClicked="#switchToExpo" pickOnBounds="true" preserveRatio="true">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></ImageView>
      <Button fx:id="Inventory" layoutY="375.0" mnemonicParsing="false" onMouseClicked="#printInventory" prefHeight="27.0" prefWidth="119.0" text="Inventory" />
   </children>
</AnchorPane>
